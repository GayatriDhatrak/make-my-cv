= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| 
  = devise_error_messages!
  .fields 
    = f.label :username 
    = f.email_field :username 

  .fields 
    = f.label :password 
    = f.password_field :password 
  - if devise_mapping.rememberable? 
    = f.check_box :remember_me 
    = f.label :remember_me 
 

  .fields  
    = f.submit "Login"
