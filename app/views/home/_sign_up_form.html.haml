= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| 

  = devise_error_messages!
  .fields
    = f.label :email 
    %br  
    = f.email_field :email
   
  .fields  
    = f.label :password 
    %br 
    = f.password_field :password 

  .fields
    = f.label :password_confirmation 
    %br 
    = f.password_field :password_confirmation

  .fields  
    = f.submit "Sign up"

