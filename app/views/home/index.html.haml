%div.grid_16
  %div.resume-demo.grid_9
    Resume
  %div.sign_up.grid_7
    = form_for(resource, :as => resource_name, :url => registration_path(resource_name),:html=>{:class=>"login_form"}) do |f| 
      .sign_up_text Sign Up and Share
      = devise_error_messages!
      .fields
        = f.label :email 
        %br  
        = f.email_field :email
       
      .fields  
        = f.label :password 
        %br 
        = f.password_field :password 

      .fields
        = f.label :password_confirmation 
        %br 
        = f.password_field :password_confirmation

      .fields  
        = f.submit "Sign up"

  =clearing_span
